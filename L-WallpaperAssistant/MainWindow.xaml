<Window x:Class="L_WallpaperAssistant.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:L_WallpaperAssistant"
        mc:Ignorable="d"
        Title="L-WallpaperAssistant" Height="161.137" Width="315.346" ResizeMode="CanMinimize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Button x:Name="nextWallpaperButton" Content="Next Wallpaper" Grid.Row="0" HorizontalAlignment="Stretch" Margin="10" VerticalAlignment="Stretch" Click="nextWallpaperButtonClick"/>
        <Button x:Name="updateWallpapersButton" Content="Update Wallpapers" Grid.Row="1" HorizontalAlignment="Stretch" Margin="10" VerticalAlignment="Stretch" Click="updateWallpapersButtonClick"/>
    </Grid>
</Window>
